	/**
	* Implementation of hook_block().
	*/

	function workshops_block($op = 'list', $delta = 0, $edit = array()) {
		switch ($op) {case 'list':
			$blocks[0]['info'] = t('What\'s New');
			return $blocks;
		case 'view':
			$item = get_link_item();
			if(!empty($item)) {
				$content = $item;
				$blocks['subject'] = t('Manage Workshop');
				$blocks['content'] = $content;
				return $blocks;
			}
		}
	}
			
